class Solution {
public:
    vector<int> arrayRankTransform(vector<int>& arr) {
          map<int,int>mpp;
           int n = arr.size();
          for(int i = 0 ;  i < n ; i++){
               mpp[arr[i]] = 0;
          }
           int rank = 1;
          for(auto&it : mpp){
              it.second = rank;
              rank++;
          }

          vector<int>ans;
          for(int i = 0 ; i < n ; i++){
               ans.push_back(mpp[arr[i]]);
          }
          return ans;
    }
};
