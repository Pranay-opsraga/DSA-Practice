class Solution {
public:
    int helper(vector<int>& nums, int goal) {
        if (goal < 0)
            return 0;
        int n = nums.size();
        int cnt = 0;
        int left = 0;
        int right = 0;
        int sum = 0;
        while (right < n) {
            sum += nums[right];
            while (sum > goal) {
                sum -= nums[left];
                left++;
            }
            cnt += right - left + 1;
            right++;
        }
        return cnt;
    }
    int numSubarraysWithSum(vector<int>& nums, int goal) {
        if (goal < 0)
            return 0;
        int n = nums.size();
        int cnt = 0;
        int left = 0;
        int right = 0;
        int sum = 0;
        while (right < n) {
            sum += nums[right];
            while (sum > goal) {
                sum -= nums[left];
                left++;
            }
            cnt += right - left + 1;
            right++;
        }

        int equals = cnt - helper(nums, goal - 1);
        return equals;
    }
};
